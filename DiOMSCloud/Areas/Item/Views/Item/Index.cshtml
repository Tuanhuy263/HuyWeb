@model ItemCriteria
@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string viewID = ViewBag.ViewID.ToString();
}

<link rel="stylesheet" href="~/Content/TableFilter.css">

<h1>@ViewData[string.Format("{0}{1}{2}", viewID, "Title", Session["Language"].ToString())].ToString()</h1>
@using (Ajax.BeginForm("ListItem", "Item", new { area = "Item"}, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "ItemList", InsertionMode = InsertionMode.Replace, LoadingElementId = "loader", OnBegin = "General.DisableButton('#filterItem')", OnComplete = "General.EnableButton('#filterItem')" }, new { id = "frmFilterItem" }))
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">Filter</div>
            <div class="panel-body">
                <table class="filter" border="0">
                    <tr>
                        <td class="filter">
                            @Html.Label(ViewData[string.Format("{0}{1}{2}", viewID, "ERPItemCode", Session["Language"].ToString())].ToString())
                        </td>
                        <td class="filter">
                            @Html.TextBoxFor(cr => cr.ERPItemCode, new { placeholder = ViewData[string.Format("{0}{1}{2}", viewID, "ERPItemCode", Session["Language"].ToString())].ToString() })
                        </td>
                        <td class="filter">
                            &nbsp;@Html.Label(ViewData[string.Format("{0}{1}{2}", viewID, "ItemType", Session["Language"].ToString())].ToString())
                        </td>
                        <td class="filter">
                            <div>
                                <select multiple="multiple" style="width: auto;" id="Tempt" name="Tempt" onchange="General.UpdateSelection(this,'#ItemType')">
                                    @if (ViewBag.ItemType != null)
                                    {
                                        foreach (var item in (List<SelectListItem>)ViewBag.ItemType)
                                        {
                                            <option value=@item.Value>
                                                @item.Text
                                            </option>
                                        }
                                    }
                                </select>
                            </div>@Html.HiddenFor(x => x.ItemType)
                        </td>
                    </tr>
                </table>
                <p></p><input type="submit" value='@ViewData[string.Format("{0}{1}{2}", viewID, "FilterData", Session["Language"].ToString())].ToString()' id="filterItem" class="btn btn-primary" title='@ViewData[string.Format("{0}{1}{2}", viewID, "FilterData", Session["Language"].ToString())].ToString()' />
            </div>
        </div>
    </div>

}
<p></p>
<div id="ItemList"></div>
<p>
    <button onclick='Item.GetItems("http://localhost:51254/api/","@Session["Access_Token"]")'>test</button>
</p>
@section scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!------- Check box in dropdown     -->
    <script type="text/javascript" src="http://davidstutz.github.io/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
    <link rel="stylesheet" href="http://davidstutz.github.io/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" type="text/css" />
    <script src="~/Scripts/boostrap.min.js"></script>
    <script src="~/Content/boostrap.min.css"></script>
}

@section functions
{
    General.setMultiSelectToList("#Tempt");
}